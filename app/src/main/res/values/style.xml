<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="company_logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="tab_layout_selected">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tab_layout_selected_drawable</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="tab_layout_not_selected">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tab_layout_un_selected_drawable</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="main_card_view_design">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/auth_main_cost_layout</item>
    </style>
    
    <style name="main_card_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#df3030</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="forgot_password_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fd5840</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="login_using_social_media">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_using_social_media_border</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="auth_bottom_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bottom_button_design</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/auth_edit_text</item>
    </style>

</resources>